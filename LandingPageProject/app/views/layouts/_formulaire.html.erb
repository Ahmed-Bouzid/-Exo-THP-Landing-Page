<div class="center jumbotron">
	<h1>Inscription</h1>
	<br/><br/>

  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <%= form_for :user do |f| %>



      <div class="form-group">
        <%= f.label :first_name %>
        <%= f.text_field :first_name, placeholder: 'Your first name', class: 'form-control' %>
      </div>

      <div class="form-group">
       <%= f.label :last_name %>
       <%= f.text_field :last_name, placeholder: 'Your last name', class: 'form-control' %>
     </div>

     <div class="form-group">
       <%= f.label :email %>
       <%= f.email_field :email, placeholder: 'example@gmail.com', class: 'form-control' %>
     </div>

     <div class="form-group">
       <%= f.label :city %>
       <%= f.text_field :city, placeholder: 'Your city', class: 'form-control' %>
     </div>

     <div class="form-group">
      <%= f.label :phone %>
      <%= f.text_field :phone, placeholder: 'Your phone number',class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :occupation %>
      <%= f.text_field :occupation, placeholder: 'Your occupation', class: 'form-control' %>
    </div>


    <br></br>

    <%= f.submit "Send", class: "btn btn-primary" %>

    <% end %>

    <br/><br/><br/><br/><br/>
  </div>
</div>
</div>