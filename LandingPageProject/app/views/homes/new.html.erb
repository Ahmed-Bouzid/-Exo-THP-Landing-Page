<div class="container-fluid">
  <div class="col-lg-12">
    <div class="row" id="back_img">
      <div class="col-md-8 offset-md-2">
        <div class="row" id="text">
          <div class="col-md-8 offset-md-2" id="titre">
            <a href="#contain2"><h1> The Hacking project</h1></a>
          </div>
        </div>
        <div class="row">
          <div class="col-lg-12" id="slogan">
            <h2>Formation pour apprendre à coder autrement</h2>
          </div>
        </div>
        <div class="row" id="description">
          <div class="col-lg-12">
            <h3>Formation gratuite durant 3 mois
            qui s'appuie sur une communauté soudée pour enseigner de manière innovante et pertinente.</h3>
          </div>
        </div>
      </div>
    </div>

    <div class="row" id="contain2">
      <div class="col-md-4 offset-md-4">

        <div class="jumbotron jumbotron-fluid">

          <h3>Recevoir la newletter</h3>
          <%= form_for(@user , url: homes_path) do |f| %>

          <div class="form-group row">
            <%= f.label :first_name  %>
            <%= f.text_field :first_name, placeholder: 'Your first name', class: 'form-control' %>
          </div>

          <div class="form-group row">
           <%= f.label :last_name %>
           <%= f.text_field :last_name, placeholder: 'Your last name', class: 'form-control' %>
         </div>

         <div class="form-group row">
           <%= f.label :email %>
           <%= f.email_field :email, placeholder: 'example@gmail.com', class: 'form-control' %>
         </div>

         <div class="form-group row">
           <%= f.label :city %>
           <%= f.text_field :city, placeholder: 'Your city', class: 'form-control' %>
         </div>

         <div class="form-group row">
          <%= f.label :occupation %>
          <%= f.text_field :occupation, placeholder: 'Your occupation', class: 'form-control' %>
        </div>


        <%= f.submit "Send", class: "btn btn-primary" %>

        <% end %>
      </div>
    </div>
  </div>
</div>

</div>



